		<view name="Derby" label="Derby查询" builder="EditViewBuilder">
			<property name="attrMap.DerbyExecute" label="D.Update" builder="TextAreaBuilder">
				<param name="button">
					<attribute name="text" value="执行" />
					<attribute name="image" value="mily/img/color.gif" />
