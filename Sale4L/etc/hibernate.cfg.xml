<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="show_sql">true</property>
		<property name="hibernate.use_sql_comments">true</property>
		<property name="auto-import">false</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<mapping class="net.sf.mily.webObject.query.SqlListBuilderSetting"/>

		<mapping class="com.haoyong.salel.base.domain.SerialNumberInfo"/>
<!-- 基础类 -->
		<mapping class="com.haoyong.salel.base.domain.Province" />
		<mapping class="com.haoyong.salel.base.domain.City" />
		<mapping class="com.haoyong.salel.base.domain.Seller" />
		<mapping class="com.haoyong.salel.base.domain.User" />
		
	</session-factory>
</hibernate-configuration>